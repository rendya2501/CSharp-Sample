<Window
    x:Class="MultiSelectDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:MultiSelectComboBox;assembly=MultiSelectComboBox"
    xmlns:local="clr-namespace:MultiSelectDemo"
    Title="MainWindow"
    Width="525"
    Height="350">
    <Window.Resources>
        <local:ViewModel x:Key="ViewModel" />
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource ViewModel}}">
        <control:MultiSelectComboBox
            x:Name="MC"
            Width="100"
            Height="30"
            ItemsSource="{Binding Items}"
            SelectedItems="{Binding SelectedItems}"
            ToolTip="{Binding Path=Text, RelativeSource={RelativeSource Self}}" />

        <TextBox
            Width="100"
            Height="30"
            Margin="208,180,209,110"
            Text="To test transparent" />
    </Grid>
</Window>
